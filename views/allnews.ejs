        <div class="site-preloader-wrap">
            <div class="spinner"></div>
        </div><!-- Preloader -->
        
        <%- include ('partials/header.ejs') %><!-- /Header Section -->
        
        <div class="header-height"></div>
        
        <div class="pager-header">
            <div class="container">
                <div class="page-content">
                    <h2>Blog Grid</h2>
                    <p>Help today because tomorrow you may be the one who <br>needs more helping!</p>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item active">Blog</li>
                    </ol>
                </div>
            </div>
        </div><!-- /Page Header -->

        <div class="container">
                <section class="blog-section bg-grey bd-bottom padding">
                        <div class="container">
                            <div class="section-heading text-center mb-40">
                                <h2>Recent News</h2>
                                <span class="heading-border"></span>
                                
                            </div><!-- /Section Heading -->
                            <div class="row">
                                <div class="col-lg-12 xs-padding">
                                    <div class="blog-items grid-list row">
                                            <%for (var i =0; i<news.length; i++){%>
                                                    <div class="col-md-4 padding-15">
                                                            <div class="blog-post">
                                                                <img src="<%=news[i].image%>" alt="blog post">
                                                                <div class="blog-content">
                                                                    <span class="date"><i class="fa fa-clock-o"></i><%=news[i].datePublished%></span>
                                                                    <h3><a href="#"><%=news[i].title%></a></h3>
                                                                    <p style=" width: 200px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;" ><%=news[i].content%></p>
                                                                    <a href="/view-news/<%=news[i]._id%>" class="post-meta">Read More</a>
                                                                </div>
                                                            </div>
                                                        </div><!-- Post 1 -->
                                                    <%}%>
                                        
                                       
                                    </div>
                                </div><!-- Blog Posts -->
                            </div>
                        </div>

                    </section>
        </div>
        
       

