        <script>
                $('#profile_form').on('submit', (e)=>{
               e.preventDefault();
            const data = new FormData();
            const image = $('#image')[0].files[0]
            const name = $('#name').val()
            const position = $('#position').val()
            const content = $('#profile').val()
            const memberType = $('#memberType').val()

           
            data.append("image", image);
            data.append("name", name);
            data.append("position", position);
            data.append("profile", content);
            data.append("memberType", memberType);
           
            console.log(data)
            $.ajax({
              url: '/create-profile/',
              method: 'POST',
              data: data,
              contentType: false,
              processData: false,
              success: (response)=>{
                if (response.success === true){
                    $('#successModal').modal('show')
                    $('#image').val('')
                    $('#name').val('')
                    $('#position').val('')
                    $('#profile').val('')
                    $('#memberType').val('')
                     
                  }
                  else{
                    $('#errorModal').modal('show')   
                  }
              }
          })
        })
                </script>

